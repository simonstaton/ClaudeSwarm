{
  "mcpServers": {
    "notion": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": { "NOTION_API_KEY": "${NOTION_API_KEY}" }
    },
    "github": {
      "command": "gh",
      "args": ["copilot", "mcp"],
      "env": { "GITHUB_TOKEN": "${GITHUB_TOKEN}" }
    },
    "google-calendar": {
      "command": "npx",
      "args": ["-y", "@anthropic/google-calendar-mcp"],
      "env": { "GOOGLE_CREDENTIALS": "${GOOGLE_CREDENTIALS}" }
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@anthropic/slack-mcp"],
      "env": { "SLACK_TOKEN": "${SLACK_TOKEN}" }
    },
    "figma": {
      "type": "http",
      "url": "https://mcp.figma.com/mcp",
      "_tokenEnv": "FIGMA_TOKEN",
      "_tokenHeader": "Authorization",
      "_tokenPrefix": "Bearer ",
      "_alwaysActivate": true
    },
    "linear": {
      "type": "http",
      "url": "https://mcp.linear.app/mcp",
      "_tokenEnv": "LINEAR_API_KEY",
      "_tokenHeader": "Authorization",
      "_tokenPrefix": "Bearer ",
      "_alwaysActivate": true
    }
  }
}
